<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-table-security-group-identity-01" author="nicola" runOnChange="true">
        <createTable tableName="group_identity">
            <column name="id" type="integer"/>
            <column name="name" type="varchar(255)"/>
        </createTable>
        <addPrimaryKey tableName="group_identity" columnNames="id"/>
        <addAutoIncrement tableName="user_identity" columnName="id" columnDataType="integer"/>
    </changeSet>
</databaseChangeLog>